{
  "compilerOptions": {
    "target": "es2020",
    "baseUrl": ".",
    "rootDir": "src",
    "paths": {
      "src/*": [
        "src/*",
      ]
    },
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "noImplicitAny": false,
    "strict": true,
    "strictNullChecks":false,
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "skipLibCheck": true,
    "outDir": "dist",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true
  },
  "include": [
    "src"
  ]
}
